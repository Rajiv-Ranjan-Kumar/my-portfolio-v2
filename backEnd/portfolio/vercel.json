{
    "version": 2,
    "builds": [
      {
        "src": "config/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "Python3.12.3" }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "config/wsgi.py"
      }
    ],
    "buildCommand": "pip install -r requirements.txt && python manage.py migrate && python manage.py collectstatic --noinput --clear"
}
  